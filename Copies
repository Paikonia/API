Applets
   Scanner scan;
    scan = new Scanner(System.in);
    double ab = scan.nextDouble();
    scan = new Scanner(System.in);
    double at = scan.nextDouble();
    scan = new Scanner(System.in);
   String cho = scan.next();
   if(cho.equalsIgnoreCase("multiply")) {
       System.out.println(multiplier(ab, at));
   } else {
      if (cho.equalsIgnoreCase("divide") ) {
          System.out.println(divider(ab, at));
      }
   }



}
public static double multiplier(double ab, double bb){
    a = ab;
    b = bb;
     return a * b;
}
public static double divider(double ab, double at){
    a = ab;
    b = at;
    return a/b;
}


